<!DOCTYPE html>
<html>
<head>
  <title>VendorTool</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>

<!--[if lt IE 9]>
  <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
<![endif]-->

  <!-- Twitter Bootstrap  -->
  <script src="http://code.jquery.com/jquery-latest.js"></script>


</head>
<body>
  <div class="navbar">
  	<div class="navbar-inner">
  	  <div class="container">	
        <h2 class="brand">SheenwayTek Vendor Tool</h2>
        <ul class="nav actions">
          <li class="nav"><%= link_to 'Home', root_url%></li>
          <li class="nav"><%= link_to 'About Us', '#' %></li>
        </ul>
      </div> <!-- container --> 
    </div>  
  </div>
  <div class="container">
  <p id="notice"><%= notice %></p>
  <% if current_user %>
    <p>Welcome <%= current_user.email %>
	<%= link_to 'Sign Out', session_url, :method => 'delete' %></p>
  <% end %>
  

  <%= yield %>
  </div>
</body>
</html>
